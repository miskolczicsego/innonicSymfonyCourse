{% extends 'AdminBundle::layout.html.twig' %}

{% block section %}
    <h1>Tags list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Tag name</th>
                <th>Slug</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td><a href="{{ path('blog_admin_tag_show', { 'id': tag.id }) }}">{{ tag.id }}</a></td>
                <td>{{ tag.name }}</td>
                <td>{{ tag.slug }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('blog_admin_tag_show', { 'id': tag.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('blog_admin_tag_edit', { 'id': tag.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('blog_admin_tag_new') }}">Create a new tag</a>
        </li>
    </ul>
{% endblock %}
