{% extends 'AdminBundle::layout.html.twig' %}

{% block section %}
    <h3>Posts list</h3>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Title</th>
                <th class="text-center">Slug</th>
                <th class="text-center">Body</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('blog_admin_post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.title }}</td>
                <td>{{ post.slug }}</td>
                <td>{{ post.body }}</td>
                <td>
                    <ul>
                        <a href="{{ path('blog_admin_post_show', { 'id': post.id }) }}" class="btn btn-primary btn-bg">show</a>
                        <a href="{{ path('blog_admin_post_edit', { 'id': post.id }) }}"  class="btn btn-success
                        btn-bg">edit</a>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <a href="{{ path('blog_admin_post_new') }}" class="btn btn-default btn-lg">Create a new post</a>
    </ul>
{% endblock %}
